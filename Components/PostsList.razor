@using System.Globalization
@using BlazorStatic
@using BlazorStatic.Services
@inject BlazorStaticContentService<BlogFrontMatter> blazorStaticContentService
@inject BlazorStaticService blazorStaticService

<ul class="flex flex-col gap-10">
  @foreach (var post in posts.OrderByDescending(x => x.FrontMatter.Published))
  {
    var firstImageUrl = ExtractFirstImageUrl(post.HtmlContent);

    <li>
      <article class="group grid gap-6 rounded  transition hover:border-primary-800/50
                      border-primary-800/0  border-x  lg:grid-cols-[220px_1fr] lg:gap-10 p-4">
        <div class="relative h-48 w-full overflow-hidden rounded-2xl border border-gray-900/60 bg-gray-900/50 lg:h-full">
          @if (!string.IsNullOrEmpty(firstImageUrl))
          {
            <img src="@firstImageUrl" alt="Post thumbnail"
              class="h-full w-full object-cover transition duration-500 group-hover:scale-105" />
          }
          else
          {
            <div class="flex h-full w-full items-center justify-center bg-gray-900">
              <div class="text-center">
                <p class="text-lg font-semibold text-gray-400">No image</p>
              </div>
            </div>
          }
          <div
            class="pointer-events-none absolute inset-0 bg-primary-900/20 opacity-0 transition group-hover:opacity-100">
          </div>
        </div>
        <div class="flex flex-col gap-6">
          <dl class="flex flex-wrap items-center gap-3 text-sm text-gray-400">
            <dt class="sr-only">Published on</dt>
            <dd class="mono-label tracking-[0.2em]">
              <time
                datetime="@post.FrontMatter.Published.ToString("yyyy-MM-ddTHH:mm:ss.fffK", CultureInfo.InvariantCulture)">
                @post.FrontMatter.Published.ToString("MMM d, yyyy", new CultureInfo("en-US"))
              </time>
            </dd>
          </dl>
          <div class="space-y-4">
            <h2 class="text-2xl font-bold leading-tight hover:text-primary-100">
              <a class="transition"
                href="@blazorStaticContentService.Options.PageUrl/@(post.Url)">@post.FrontMatter.Title</a>
            </h2>
            <div class="flex flex-wrap gap-2">
              @foreach (var tag in post.FrontMatter.Tags)
              {
                <a class="meta-chip hover:border-accent-500/40 hover:text-accent-300"
                  href="@blazorStaticContentService.Options.Tags.TagsPageUrl/@tag">@tag</a>
              }
            </div>
            <div class="text-gray-400">
              @((MarkupString)post.FrontMatter.Lead)
            </div>
          </div>
          <div>
            <a class="inline-flex items-center gap-2 rounded-full border border-accent-500/50 px-4 py-2 text-sm font-semibold text-accent-300 transition hover:border-accent-300 hover:text-white"
              aria-label='Read "@(post.FrontMatter.Lead)"' href="@blazorStaticContentService.Options.PageUrl/@(post.Url)">
              Read article
              <span aria-hidden="true">â†’</span>
            </a>
          </div>
        </div>
      </article>

    </li>
  }
</ul>


@code {
  List<Post<BlogFrontMatter>> posts = new();


  [Parameter] public List<Post<BlogFrontMatter>>? Posts { get; set; }
  protected override void OnInitialized()
  {
    posts = Posts != null ? Posts.OrderBy(x => x.FrontMatter.Published).ToList() : blazorStaticContentService.Posts;
    base.OnInitialized();
  }

  // Utility method to extract first image URL from HTML content
  private string? ExtractFirstImageUrl(string htmlContent)
  {
    if (string.IsNullOrEmpty(htmlContent))
      return null;

    var match = System.Text.RegularExpressions.Regex.Match(htmlContent, "<img[^>]+src=\"([^\"]+)\"[^>]*>",
    System.Text.RegularExpressions.RegexOptions.IgnoreCase);
    if (match.Success && match.Groups.Count > 1)
    {
      return match.Groups[1].Value;
    }
    return null;
  }
}
